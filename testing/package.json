{
  "name": "tripplanner-testing",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for TripPlanner - UI, API, and Database testing",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --project=ui",
    "test:api": "playwright test --project=api",
    "test:db": "playwright test --project=database",
    "test:smoke": "playwright test --grep @smoke",
    "test:critical": "playwright test --grep @critical",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:codegen": "playwright codegen http://localhost:3000",
    "clean": "rm -rf test-results playwright-report .auth",
    "db:reset-test": "tsx utils/reset-test-database.ts",
    "db:seed-test": "tsx utils/seed-test-data.ts"
  },
  "dependencies": {
    "@playwright/test": "^1.49.0",
    "@prisma/client": "^6.18.0",
    "dotenv": "^17.2.3",
    "tsx": "^4.20.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "typescript": "^5.9.3"
  }
}
