# Database
# PostgreSQL connection string
# Format: postgresql://[user[:password]@][host][:port]/database[?schema=public]
# Example local: postgresql://mikeprince@localhost:5432/tripplanner?schema=public
# Example remote: postgresql://user:password@host.com:5432/tripplanner?schema=public&sslmode=require
DATABASE_URL="postgresql://user@localhost:5432/tripplanner?schema=public"

# Firebase Client (public - exposed to browser)
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id

# Firebase Admin SDK (private - server only)
FIREBASE_SERVICE_ACCOUNT_KEY='{"type": "service_account", "project_id": "...", "private_key": "...", ...}'

# WebAuthn/Passkey Configuration (public - exposed to browser)
NEXT_PUBLIC_RP_ID=localhost
NEXT_PUBLIC_ORIGIN=http://localhost:3000
